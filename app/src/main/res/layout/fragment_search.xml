<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.theshine.android.lites.ui.view.main.search.SearchViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic__back__appbar"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_hospital"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginRight="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초기화"
                android:textColor="@color/black"
                android:onClick="@{() -> vm.setInitialization()}"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13dp"
                android:background="@drawable/bg_rounded_f9f8_radius_50dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:onClick="@{() -> vm.actionKmOpen()}"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_rounded_f9f8_radius_50dp"
                />

        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHospitalList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            bindSearchAnimal="@{vm.searchData}"
           />

    </LinearLayout>
        
        <LinearLayout
            android:id="@+id/sheet_km"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:behavior_hideable="true"
            app:behavior_peekHeight="180dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp"
            android:background="@drawable/bottom_sheet_radius_4dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_x"
                    android:onClick="@{() -> vm.actionKmClose()}"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(1000)}"
                    android:background="@{vm.isSelected == 1000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="2km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(2000)}"
                    android:background="@{vm.isSelected == 2000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="5km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(5000)}"
                    android:background="@{vm.isSelected == 5000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="10km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(10000)}"
                    android:background="@{vm.isSelected == 10000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="15km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(15000)}"
                    android:background="@{vm.isSelected == 15000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="20km"
                    android:gravity="center"
                    android:onClick="@{() -> vm.setKmSelected(20000)}"
                    android:background="@{vm.isSelected == 20000 ? @drawable/bg_green_dcf5_radius_10dp : @drawable/bg_rounded_f9f8_radius_50dp}"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>