<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.theshine.android.lites.ui.view.info.ingredient.IngredientViewModel" />

        <variable
            name="item"
            type="com.theshine.android.lites.ui.view.info.ingredient.IngredientViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page4"
                android:layout_weight="1"
                android:textColor="@color/grey_8082"
                android:textSize="16dp"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:layout_margin="15dp"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="테스트네임"
                android:layout_marginLeft="15dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(이)"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가 먹는"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사료 성분"
                android:layout_marginLeft="15dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="을"
                android:textSize="22dp"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작성"
                android:textSize="22dp"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해 주세요"
                android:textSize="22dp"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수분함량"
                android:textSize="15dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black" />

           <EditText
               android:id="@+id/etMoisture"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@drawable/bg_square_f9f8_radius_6dp"
               android:hint="작성해주세요"
               android:text="@={vm.moisture}"
               android:textSize="15dp"
               android:inputType="number"
               android:layout_marginTop="10dp"
               android:paddingLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조단백질"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etProtein"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_square_f9f8_radius_6dp"
                android:hint="작성해주세요"
                android:text="@={vm.protein}"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조지방"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etFat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_square_f9f8_radius_6dp"
                android:hint="조지방"
                android:text="@={vm.fat}"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조섬유"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etFiber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_square_f9f8_radius_6dp"
                android:hint="작성해주세요"
                android:text="@={vm.fiber}"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회분"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etAsh"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_square_f9f8_radius_6dp"
                android:hint="작성해주세요"
                android:text="@={vm.ash}"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회분 함량은 확인이 어려울 경우 기재하지 않아도 됩니다."
                android:textSize="14dp"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/grey_8082"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="@{() -> vm.skip()}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_cat_shape"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사료정보는 다음에 작성 할래요!"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font_regular"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="@{() -> vm.next()}"
            android:background="@{vm.selected ? @drawable/btn_next : @drawable/btn_next}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_medium"/>

        </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>