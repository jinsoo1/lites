<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.theshine.android.lites.data.common.model.User" />

        <variable
            name="vm"
            type="com.theshine.android.lites.ui.view.main.home.main.HomeMainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ic_back_scales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingLeft="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.myPet.name}"
                        android:textSize="24dp"
                        android:textColor="@color/yellow_FDF5"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 건강"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="을"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체크"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해볼까요?"
                        android:textSize="24dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_radius_50dp"
                    android:text="체중계 연결 가이드"
                    android:textColor="@color/green_51C2"
                    android:textSize="14dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/test_img"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingTop="20dp"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            android:background="@drawable/top_sheet_radius_30dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green_61C9"
                android:textSize="14dp"
                android:text="2022.9.5"
                android:gravity="center"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <LinearLayout
                android:id="@+id/layout_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickWrite()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDate">


                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.weight}"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                app:cardElevation="6dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:onClick="@{() -> vm.setting0()}"
                app:layout_constraintTop_toBottomOf="@+id/layout_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_circle_arrow"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영점 조절"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/grey_8082"
                        android:gravity="center"
                        android:layout_gravity="center"

                        />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_box_no_connetion"
                android:layout_marginTop="20dp"
                android:onClick="@{() -> vm.isConnect ? vm.onClickDisconnect() : vm.onClickScan()}"
                app:layout_constraintTop_toBottomOf="@+id/cv_stop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_green_40c5_radius_50dp"
                android:textColor="@color/white"
                android:text="@{vm.isConnect ? @string/scale_unconnected : @string/scale_connected}"
                android:textSize="20dp"
                android:onClick="@{() -> vm.isConnect ? vm.onClickDisconnect() : vm.onClickScan()}"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/iv_write"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>