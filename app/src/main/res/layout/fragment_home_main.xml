<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.theshine.android.lites.data.common.model.User" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:background="@color/green_DCF5"
                android:paddingLeft="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="테스트 이름"
                        android:textSize="24dp"
                        android:textColor="@color/yellow_FDF5"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 건강"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="을"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체크"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해볼까요?"
                        android:textSize="24dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_regular"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_radius_50dp"
                    android:text="체중계 연결 가이드"
                    android:textColor="@color/green_51C2"
                    android:textSize="14dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/test_img"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:orientation="vertical"
            android:background="@drawable/top_sheet_radius_30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="6dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영점"
                    android:textColor="@color/grey_8082"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="343dp"
                android:layout_height="320dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_61C9"
                        android:textSize="14dp"
                        android:text="2022.9.5"
                        android:gravity="center"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_square_f9f8_radius_6dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.5"
                            android:textSize="30dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_green_40c5_radius_50dp"
                android:textColor="@color/white"
                android:text="체중계 연결"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </LinearLayout>

</layout>