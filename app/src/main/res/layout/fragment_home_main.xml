<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.theshine.android.lites.data.common.model.User" />

        <variable
            name="vm"
            type="com.theshine.android.lites.ui.view.main.home.main.HomeMainViewModel" />

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_back_scales"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/layout_middle"
                >

                <LinearLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.myPet.name}"
                            android:textSize="24dp"
                            android:textColor="@color/yellow_FDF5"
                            android:fontFamily="@font/font_bold"
                            />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="의"
                            android:textSize="24dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘 건강"
                            android:textSize="24dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="을"
                            android:textSize="24dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="체크"
                            android:textSize="24dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해볼까요?"
                            android:textSize="24dp"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_regular"/>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_bottomsheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_radius_50dp"
                        android:text="체중계 연결 가이드"
                        android:textColor="@color/green_51C2"
                        android:textSize="14dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="30dp"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_vertical"
                    bindProfileImage="@{vm.myPet.profileImg}"
                    android:background="@drawable/ic_mainprofile_image_circle"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintStart_toEndOf="@+id/layout_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@drawable/top_sheet_radius_30dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_head"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.4"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.8"
                    />




                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_61C9"
                    android:textSize="17dp"
                    android:text="@{vm.getDate}"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/layout_weight"
                    />
                <LinearLayout
                    android:id="@+id/layout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/cv_stop"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate"
                   >


                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.weight}"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginRight="15dp"
                        />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:layout_gravity="center"
                    android:onClick="@{() -> vm.setting0()}"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_weight"
                    >


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/ic_icon_circle_arrow"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="영점 조절"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/grey_8082"
                            android:gravity="center"
                            android:layout_gravity="center"

                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_write"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@{vm.isConnect ? @drawable/ic_box_connection: @drawable/ic_box_no_connetion}"
                    android:onClick="@{() -> vm.onClickWrite()}"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_green_40c5_radius_50dp"
                    android:textColor="@color/white"
                    android:text="@{vm.isConnect ? @string/scale_unconnected : @string/scale_connected}"
                    android:textSize="20dp"
                    android:onClick="@{() -> vm.isConnect ? vm.onClickDisconnect() : vm.onClickScan()}"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/iv_write"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/sheetHomeMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            app:behavior_hideable="true"
            android:visibility="gone"
            app:layout_behavior="@string/bottom_sheet_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/ivHandle"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_img_bar"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="체중계 연결가이드"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:src="@drawable/scale_guide_step1"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. 체중계의 전원버튼을 3초간 눌러 체중계의 전원을 켜줍니다."
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:src="@drawable/scale_guide_step2"
                            android:layout_marginTop="20dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2. 체중계의 블루투스 버튼을 클릭하여 블루투스를 켜줍니다."
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:src="@drawable/scale_guide_step3"
                            android:layout_marginTop="20dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3. 휴대폰 블루투스를 킨뒤 체중계의 블루투스와 연결해 줍니다."
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:src="@drawable/scale_guide_step4"
                            android:layout_marginTop="20dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4. 연결이 정상적으로 완료되었는지 확인 후 사용해 주세요."
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

               </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>