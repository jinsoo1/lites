<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="com.theshine.android.lites.ui.view.info.scale.ScaleViewModel" />

        <variable
            name="activityviewmodels"
            type="com.theshine.android.lites.ui.view.info.InfoViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page4"
                android:layout_weight="1"
                android:textColor="@color/grey_8082"
                android:textSize="16dp"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="체중계"
                android:layout_marginLeft="15dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="를"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연동"
                android:layout_marginLeft="7dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하고"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{activityviewmodels.name}"
                android:layout_marginLeft="15dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="의"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="건강관리"
                android:layout_marginLeft="7dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="를"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작"
                android:layout_marginLeft="7dp"
                android:textSize="22dp"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하세요"
                android:textSize="22dp"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체중계로 더욱 체계적인 건강 관리를 시작하세요"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/grey_8082"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn_store"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:onClick="@{() -> vm.next()}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_white_stroke_e6e8_radius_6dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/font_bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로 이동"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/font_medium"
                    android:textColor="@color/black" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중계를 보유하고 있다면?"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_check_cat_shape"
                android:drawablePadding="5dp"
                android:textSize="16dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{() -> vm.next()}"
            android:background="@drawable/btn_next">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중계 연결하러가기"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_medium"
                />

        </LinearLayout>

    </LinearLayout>


</layout>